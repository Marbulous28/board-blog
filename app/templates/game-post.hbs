<h3>{{model.title}}</h3>
<h4>By: {{model.author}}</h4>
<img src={{model.image}}>
<p>Description: <br>{{model.copy}}</p>

<h5>Comments:</h5>
  <ul>

    {{#each model.comments as |comment|}}
    <div class='comment-box'>
      <li>{{comment.name}} <br>- {{comment.comment}}</li>
      <div id='comment-buttons'>
      {{update-comment comment=comment updateComment="updateComment"}}
      </div>
      <button {{action 'deleteComment' comment}}>Delete Comment</button>
      </div>
    {{/each}}

  </ul>
{{comment-card  post=model postComment="postComment"}}
